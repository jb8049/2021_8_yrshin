	<!-- 내 예산 구성 select -->
	<!-- 내 한달 설정 소비예산(생활금), 저축액(비상금) 조회-->
<!-- 	<select id="myMonthlySplit" parameterType="string" resultMap="autoSplitMap">
		select * from tbl_auto_split where account_no= #{accountNo}
	</select>
	
	내 한달 고정 지출액 조회(기본금)
